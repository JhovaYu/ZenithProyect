{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "../dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": false,
      "types": ["node", "express", "sequelize", "cors", "bcrypt", "jsonwebtoken"]
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }